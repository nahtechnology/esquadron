<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
			  version="2.2">

	<!--	Reglas de navegaciÃ³n	-->

	<navigation-rule>
		<from-view-id>/administracion/dashboard.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>detalle</from-outcome>
			<to-view-id>/administracion/detalle-escuela.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>catalogo-administracion</from-outcome>
			<to-view-id>/administracion/catalogo-administracion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/administracion/detalle-escuela.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/administracion/dashboard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>catalogo-administracion</from-outcome>
			<to-view-id>/administracion/catalogo-administracion.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>coordinador</from-outcome>
			<to-view-id>/administracion/coordinador.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/administracion/detalle-escuela.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/administracion/dashboard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>catalogo-administracion</from-outcome>
			<to-view-id>/administracion/catalogo-administracion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/administracion/catalogo-administracion.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/administracion/dashboard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>catalogo-administracion</from-outcome>
			<to-view-id>/administracion/catalogo-administracion.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/alumno/inicio-sesion.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/alumno/dashboard.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/alumno/tareas-alumno.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>transcript-final</from-outcome>
			<to-view-id>/alumno/transcrip-final.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- traduccion de las vistas -->

	<application>
		<resource-bundle>
			<base-name>etiqueta</base-name>
			<var>etiqueta</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>boton</base-name>
			<var>boton</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>administracion</base-name>
			<var>administracion</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>coordinacion</base-name>
			<var>coordinacion</var>
		</resource-bundle>

		<message-bundle>
			validacion.Messages
		</message-bundle>
	</application>

</faces-config>
