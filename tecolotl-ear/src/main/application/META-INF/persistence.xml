<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tecolotl">
		<jta-data-source>java:jboss/datasources/datasources/tecolotlPruebasDS</jta-data-source>
<!--		<jta-data-source>java:jboss/datasources/tecolotlPruebasDS</jta-data-source>-->
        <jar-file>../tecolotl-nucleo.jar</jar-file>
		<jar-file>../tecolotl-administracion.jar</jar-file>
		<jar-file>../tecolotl-alumno.jar</jar-file>
		<jar-file>../tecolotl-profesor.jar</jar-file>
        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="hibernate.show_sql" value="false"/>
        </properties>
	</persistence-unit>

	<persistence-unit name="alumno">
		<jta-data-source>java:jboss/datasources/esquadronAlumno_DS</jta-data-source>
		<jar-file>../tecolotl-alumno.jar</jar-file>
		<jar-file>../tecolotl-profesor.jar</jar-file>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="administracion">
		<jta-data-source>java:jboss/datasources/esquadronAdministracion_DS</jta-data-source>
		<jar-file>../tecolotl-administracion.jar</jar-file>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="profesor">
		<jta-data-source>java:jboss/datasources/esquadronProfesor_DS</jta-data-source>
		<jar-file>../tecolotl-profesor.jar</jar-file>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>

</persistence>
