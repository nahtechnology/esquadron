<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tecolotl">
		<jta-data-source>java:jboss/datasources/tecolotlDesarrolloDS</jta-data-source>
        <jar-file>../tecolotl-nucleo.jar</jar-file>
        <jar-file>../tecolotl-alumno.jar</jar-file>
		<class>tecolotl.nucleo.persistencia.entidad.TemaEntidad</class>
		<class>tecolotl.nucleo.persistencia.entidad.ActividadEntidad</class>
		<class>tecolotl.nucleo.persistencia.entidad.VideoEntidad</class>
		<class>tecolotl.nucleo.persistencia.entidad.LenguajeEntidad</class>
		<class>tecolotl.nucleo.persistencia.entidad.NivelLenguajeEntidad</class>
		<class>tecolotl.alumno.persistencia.entidad.AlumnoEntidad</class>
		<class>tecolotl.alumno.persistencia.entidad.GradoEscolarEntidad</class>
		<class>tecolotl.alumno.persistencia.entidad.TareaVideoEntidadPK</class>
		<class>tecolotl.alumno.persistencia.entidad.TareaVideoEntidad</class>
        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
        </properties>
	</persistence-unit>
</persistence>
