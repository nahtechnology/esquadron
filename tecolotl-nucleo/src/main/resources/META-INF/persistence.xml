<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="tecolotl-nucleo">
		<jta-data-source>java:jboss/datasources/esquadronDesarrolloDS</jta-data-source>
		<class>tecolotl.nucleo.persistencia.entidad.TemaEntidad</class>
        <class>tecolotl.nucleo.persistencia.entidad.ActividadEntidad</class>
        <class>tecolotl.nucleo.persistencia.entidad.VideoEntidad</class>
        <class>tecolotl.nucleo.persistencia.entidad.LenguajeEntidad</class>
        <class>tecolotl.nucleo.persistencia.entidad.NivelLenguajeEntidad</class>
        <properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.show_sql" value="true"/>
        </properties>
	</persistence-unit>
</persistence>
