    <modules>
    	<module>tecolotl-ear</module>
    	<module>tecolotl-web</module>
    	<module>tecolotl-nucleo</module>
    	<module>tecolotl-alumno</module>
        <module>tecolotl-administracion</module>
        <module>tecolotl-profesor</module>
